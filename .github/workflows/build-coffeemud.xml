name: Build CoffeeMUD Distribution

on:
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # Checkout the repository
      - name: Checkout code
        uses: actions/checkout@v4

      # Set up Java 8
      - name: Set up JDK 8
        uses: actions/setup-java@v4
        with:
          java-version: '8'
          distribution: 'adopt'

      # Install Ant
      - name: Install Ant
        run: |
          sudo apt-get update
          sudo apt-get install -y ant
        shell: bash

      # Set up environment
      - name: Set up environment
        run: |
          echo "JAVA_HOME=$JAVA_HOME_8_X64" >> $GITHUB_ENV
          echo "CLASSPATH=.;./lib/js.jar;./lib/jzlib.jar" >> $GITHUB_ENV
        shell: bash

      # Run Ant compile task
      - name: Run Ant compile
        run: |
          ant compile
        shell: bash
        working-directory: ${{ github.workspace }}

      # Extract and process version from MUD.java
      - name: Extract version from MUD.java
        run: |
          VERSION=$(grep 'static final String[[:space:]]\+HOST_VERSION' com/planet_ink/coffee_mud/application/MUD.java | head -n 1 | sed -E 's/.*= "([^"]+)".*/\1/' | tr '.' '_')
          if [ -z "$VERSION" ]; then
            echo "Error: Could not extract HOST_VERSION from MUD.java"
            exit 1
          fi
          echo "VERSION=$VERSION" >> $GITHUB_ENV
        shell: bash
        working-directory: ${{ github.workspace }}

      # Create ZIP files
      - name: Create ZIP files
        run: |
          # Create CoffeeMud.zip
          zip -r -q CoffeeMud.zip .
          # Create CoffeeMud_${version}.zip, excluding CoffeeMud.zip
          zip -r -q "CoffeeMud_${VERSION}.zip" . -x CoffeeMud.zip
        shell: bash
        working-directory: ${{ github.workspace }}

      # Upload artifacts
      - name: Upload artifacts
        uses: actions/upload-artifact@v4
        with:
          name: coffeemud-dist
          path: |
            ${{ github.workspace }}/CoffeeMud.zip
            ${{ github.workspace }}/CoffeeMud_${VERSION}.zip
          if-no-files-found: warn

      # Create GitHub Release
      - name: Create GitHub Release
        id: create_release
        uses: actions/create-release@v1
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        with:
          tag_name: v${{ env.VERSION }}
          release_name: CoffeeMUD v${{ env.VERSION }}
          draft: false
          prerelease: false

      # Upload CoffeeMud_${VERSION}.zip to Release
      - name: Upload Release Asset
        uses: actions/upload-release-asset@v1
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        with:
          upload_url: ${{ steps.create_release.outputs.upload_url }}
          asset_path: ${{ github.workspace }}/CoffeeMud_${VERSION}.zip
          asset_name: CoffeeMud_${VERSION}.zip
          asset_content_type: application/zip